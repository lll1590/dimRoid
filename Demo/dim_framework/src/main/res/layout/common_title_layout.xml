<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_root"
    android:layout_width="match_parent"
    android:layout_height="96px"
    android:theme="@style/ToolbarTheme">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/toolbar_left_1"
            style="@style/TitleTxtStyle"

            android:drawableLeft="@drawable/icon_common_back"
            android:layout_marginLeft="10px"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/toolbar_left_2"
            style="@style/TitleTxtStyle"
            android:layout_marginLeft="10px"
            app:layout_constraintLeft_toRightOf="@+id/toolbar_left_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/toolbar_title"
            style="@style/TitleTxtStyle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_gravity="center"
            android:text="标题"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/toolbar_right_2"
            style="@style/TitleTxtStyle"
            android:layout_marginRight="10px"
            app:layout_constraintRight_toLeftOf="@+id/toolbar_right_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/toolbar_right_1"
            style="@style/TitleTxtStyle"
            android:layout_marginRight="10px"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.appcompat.widget.Toolbar>
